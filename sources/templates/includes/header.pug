block variables
    - var path = self.htmlWebpackPlugin.options
    - var pathToFile = (path.mode == 'development') ? "../../../sources/" : ""
    


mixin header(language)
    .section-top
        .container
            .top-container
                .phone
                    a(href="tel:" +  path.file.tel)
                        svg(class="icon")
                            use(xlink:href="#icon-phone")
                        span.vd= path.file.tel
                        span.vm Telefon

                .mail
                    a(href="mailto:" + path.file.mail)
                        svg(class="icon")
                            use(xlink:href="#icon-mail")
                        span.vd= path.file.mail
                        span.vm Email

                .top-language
                    if language === 'de'
                        - var link = "index.html"
                    else 
                        - var link = "index-pl.html"
                    a(href="./" + link)
                        svg(class="flag-" + language)
                            use(xlink:href="#flag-" + language) 
                        span
                            if language === 'de'
                               | Niemiecki
                            else 
                               | Polnisch

    header.section-header.parallax
        .header-container
            .header-top
                .logo
                    a(href="#top")
                        svg(class="logo")
                            use(xlink:href="#logo")
                .menu.vd
                    ul
                        each val, i in path.file.menu
                            li
                                a(href="#"+val.text.replace(' ', '-'))
                                    = val.text
                .menu-mobile.vm
                    .mobile
                        svg(class="menu-h")
                            use(xlink:href="#icon-menu")
        .container
            .section-center
                .header-slogan
                    h1!= path.file.titleBig

                .header-keywords
                    ul.ul-clear
                        each val, i in path.file.keywords
                            li.h3= val.key