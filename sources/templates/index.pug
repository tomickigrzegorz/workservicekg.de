block variables
- var path = self.htmlWebpackPlugin.options
- var pathToFile = (path.mode == 'development') ? "../../../sources/" : ""

doctype html
html(lang="pl", dir="ltr" itemscope itemtype="http://schema.org/WebPage")

    include ./includes/head.pug
    include ./includes/header.pug
    include ./includes/svgLogo.pug

    head
        +head(path.file)

    body

        +svgLogo()
        +header("pl")

        main(class="main")
                each val, i in path.file.items
                    section(id=val.className class='section ' + val.bgColor + ' ' + val.textColor)
                        .container
                            h2= val.title
                            .section_description!= val.text
                                if i === 1
                                    .phone
                                        a(href="tel:+4915129826667")
                                            svg(class="icon")
                                                use(xlink:href="#icon-phone")
                                            span= path.file.tel

                                    .mail
                                        a(href="mailto:" + path.file.mail)
                                            svg(class="icon")
                                                use(xlink:href="#icon-mail")
                                            span= path.file.mail

        script(type='application/ld+json').
            {
                "@context": "http://schema.org/",
                "@type": "Blog",
                "publisher": "blog.grzegorztomicki.pl",
                "author": "#{path.file.schema.author}",
                "datePublished": "#{path.file.schema.datePublished}",
                "dateModified": "#{path.file.schema.dateModified}",
                "headline": "Storna firmowa"
            }

        include ./includes/footer.pug